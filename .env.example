# Zzzuper PDF Configuration File
# Salin file ini menjadi .env.local dan edit sesuai kebutuhan

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=zuperpdf-secret-key-2024-change-this-in-production

# Server Configuration
HOST=127.0.0.1
PORT=5000

# Upload Configuration
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=524288000  # 500MB in bytes
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png

# PDF Processing
PDF_QUALITY=80  # JPEG quality for PDF pages
MAX_DIM=1200    # Maximum dimension for images

# Features
ENABLE_BARCODE_DETECTION=True
ENABLE_RENAME_PDF=False  # Will be added in future update
ENABLE_PDF_EDIT=False    # Will be added in future update
